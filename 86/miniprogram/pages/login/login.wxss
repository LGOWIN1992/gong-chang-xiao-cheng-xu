/* pages/login/login.wxss */
.container {
  padding-top: 100px;
}

.login-box {
  width: 80%;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.title {
  font-size: 20px;
  text-align: center;
  margin-bottom: 20px;
}

.input {
  border: 1px solid #ddd;
  padding: 10px;
  border-radius: 4px;
  height: 40px;
}

.login-btn {
  background-color: #07c160;
  color: white;
  width: 100%;
}
