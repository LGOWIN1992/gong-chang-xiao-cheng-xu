<!--pages/admin/entry/entry.wxml-->
<view class="container">
  <view class="form-group">
    <view class="form-item">
      <text class="label">货物型号</text>
      <input class="input" placeholder="请输入型号" value="{{model}}" bindinput="onModelInput" />
    </view>
    <view class="form-item location-group">
      <text class="label">存放位置 (选填)</text>
      <view class="location-inputs">
        <view class="loc-row">
          <input class="input-mini" placeholder="X" value="{{loc_zone}}" bindinput="onZoneInput" />
          <text class="fixed-text">区</text>
          <input class="input-mini" placeholder="X" value="{{loc_shelf}}" bindinput="onShelfInput" />
          <text class="fixed-text">号架</text>
        </view>
        <view class="loc-row">
          <input class="input-mini" placeholder="X" value="{{loc_layer}}" bindinput="onLayerInput" />
          <text class="fixed-text">层</text>
          <input class="input-mini" placeholder="X" value="{{loc_pos}}" bindinput="onPosInput" />
        </view>
      </view>
    </view>
  </view>

  <view class="btn-area">
    <button class="btn-save" bindtap="onSave">保存</button>
  </view>
</view>
