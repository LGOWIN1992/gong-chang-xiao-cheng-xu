/* pages/admin/dashboard/dashboard.wxss */
.container {
  padding: 10px;
  height: 100vh;
  background-color: #f6f6f6;
}

.action-bar {
  display: flex;
  flex-wrap: wrap; /* 允许换行 */
  justify-content: flex-start; /* 左对齐 */
  margin-bottom: 20px;
  gap: 10px;
}

.action-btn {
  font-size: 14px;
  padding: 8px 15px; /* 增加左右内边距 */
  width: auto; /* 宽度自适应 */
  min-width: 80px; /* 最小宽度 */
  background-color: #fff;
  border: 1px solid #ddd;
  margin-right: 5px; /* 右边距 */
}

.action-btn.primary {
  background-color: #07c160;
  color: white;
  border: none;
}

.action-btn.warn {
  background-color: #fa5151;
  color: white;
  border: none;
}

.action-btn.active {
  background-color: #ededed;
  border-color: #999;
}

.list-header {
  margin-bottom: 10px;
  font-size: 14px;
  color: #666;
}

.list-container {
  flex: 1;
  height: calc(100vh - 120px);
}

.list-item {
  background-color: white;
  padding: 15px;
  margin-bottom: 10px;
  border-radius: 6px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-checkbox {
  margin-right: 10px;
}

.item-info {
  display: flex;
  flex-direction: column;
  gap: 5px;
}

.item-model {
  font-weight: bold;
  font-size: 16px;
}

.item-location {
  color: #666;
  font-size: 14px;
}

.item-actions {
  display: flex;
  gap: 15px;
}

.btn-edit {
  color: #576b95;
  font-size: 14px;
}

.btn-delete {
  color: #fa5151;
  font-size: 14px;
}

.empty-tip {
  text-align: center;
  color: #999;
  margin-top: 50px;
}

.loading-tip, .no-more-tip {
  text-align: center;
  color: #999;
  font-size: 12px;
  padding: 15px 0;
}
