.container {
  padding: 20px;
}
.header {
  margin-bottom: 30px;
  text-align: center;
}
.title {
  font-size: 20px;
  font-weight: bold;
  display: block;
  margin-bottom: 10px;
}
.desc {
  font-size: 14px;
  color: #666;
}
.action-area button {
  margin-bottom: 15px;
}
.log-area {
  height: 300px;
  background: #f8f8f8;
  padding: 10px;
  border-radius: 5px;
  margin-top: 20px;
  box-sizing: border-box;
}
.log-item {
  font-size: 12px;
  margin-bottom: 5px;
  font-family: monospace;
  border-bottom: 1px solid #eee;
  padding-bottom: 2px;
}