<view class="container">
  <view class="header">
    <text class="title">稳定性测试工具</text>
    <text class="desc">用于批量读写测试数据库性能与稳定性</text>
  </view>

  <view class="action-area">
    <button type="primary" bindtap="onBatchAdd" loading="{{loading}}">批量生成50条数据</button>
    <button type="default" bindtap="onBatchQuery" loading="{{loading}}">执行全量查询测试</button>
    <button type="warn" bindtap="onBatchDelete" loading="{{loading}}">清空测试数据</button>
  </view>

  <scroll-view scroll-y class="log-area">
    <view wx:for="{{logs}}" wx:key="index" class="log-item">{{item}}</view>
  </scroll-view>
</view>